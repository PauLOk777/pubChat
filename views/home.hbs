<div id="content">
	<div id="main">
		<div id="users">
			<div><h3>Active users:</h3></div></br>
		</div>
		<div id="chat">
			<div id="messages">
			
			</div>
			<div id="typeMsg">
				<form name="publish">
					<textarea id="message" placeholder="Write your message..."></textarea> 
					<input type="submit" value="Send" id="button">
				</form>
			</div>
		</div>
	</div>
</div>
<span style="display: none;" id="disable">{{check}}</span>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
	$(function() {
		const socket = io.connect('http://localhost:3000');
		$('form').submit(e => {
			e.preventDefault();
			socket.emit('message', $('#message').val());
			$('#message').val('');
			return false;
		});

		socket.on('addMessage', event => {
			$('#messages').append($('<div>').text(event));
		});
	});
</script>
<script>
	$(function() {
		if($('#disable').text() == 'false') {
			$('#message').prop('disabled', true);
			$('#button').prop('disabled', true);
			$('#message').prop('placeholder', "Sign in to write something...");
		}
	})
</script>